<% layout('layout') -%>

    <h1>Citat</h1>

    <form action="/add" method="POST">
        <input type="text" name="author" placeholder="Författare" required>
        <input type="text" name="text" placeholder="Citat" required>
        <button type="submit">Lägg till</button>
    </form>

    <ul>
        <% quotes.forEach(quote=> { %>
            <li>
                <strong>
                    <%= quote.author %>
                </strong>: <%= quote.text %>
                    <form action="/delete/<%= quote.id %>" method="POST" style="display:inline;">
                        <button>❌</button>
                    </form>
                    <a href="/edit/<%= quote.id %>">✏️</a>
            </li>
            <% }) %>
    </ul>